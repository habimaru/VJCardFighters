<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Choose your character!"
            android:id="@+id/textoChoose"
            android:layout_gravity="center_horizontal|top" />

        <ImageView
            android:layout_width="173dp"
            android:layout_height="153dp"
            android:id="@+id/imageView"
            android:layout_gravity="center"
            android:src="@drawable/habimaru"
            android:onClick="newGame" />

        <FrameLayout
            android:layout_width="306dp"
            android:layout_height="74dp"
            android:layout_gravity="center_horizontal|bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Habimaru"
                android:id="@+id/nombrePersonaje"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Pikachu SSJ de nivel 3"
                android:id="@+id/descripcionPersonaje"
                android:layout_gravity="center|bottom"
                android:gravity="center_horizontal" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="146dp"
            android:layout_height="124dp"
            android:layout_gravity="left|center_vertical"
            android:onClick="shiftI">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:id="@+id/jugadorIzq"
                android:layout_gravity="center_vertical|right"
                android:src="@drawable/kaos" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="135dp"
            android:layout_height="124dp"
            android:layout_gravity="right|center_vertical"
            android:id="@+id/frameLayout" >

            <ImageView
                android:layout_width="120dp"
                android:layout_height="78dp"
                android:id="@+id/jugadorDer"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/malfuin"
                android:onClick="shiftD" />

        </FrameLayout>

    </FrameLayout>
</RelativeLayout>

